<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingTop="8dp"
    android:paddingEnd="8dp"
    android:paddingBottom="8dp"
    app:layout_constraintBottom_toTopOf="@+id/max"
    app:layout_constraintEnd_toStartOf="@+id/state_image"
    app:layout_constraintStart_toStartOf="@+id/state_image"
    app:layout_constraintTop_toTopOf="@+id/max">



        <TextView
            android:id="@+id/datee"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="HELLO"
            android:textColor="@color/WhiteSmoke"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/state_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/state_image"
            android:layout_width="36dp"
            android:layout_height="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="84dp"
            android:src="@drawable/ic_arrow_right_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/max"
            app:layout_constraintStart_toEndOf="@+id/datee"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="15dp"
            android:text="100"
            android:textColor="@color/WhiteSmoke"
            android:textSize="20dp"
            app:layout_constraintEnd_toStartOf="@+id/min"
            app:layout_constraintStart_toEndOf="@+id/state_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="15dp"
            android:text="12"
            android:textColor="@android:color/darker_gray"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/max"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6"
            android:layout_marginRight="0dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>